{
    "root": true,
    "env": {
        "node": true,
        "es6": true,
        "browser": true,
        "jest": true
    },
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },

    "extends": [
        "plugin:vue/essential",
        "eslint:recommended",
        "@vue/typescript/recommended"
    ],
    "plugins": ["vue", "@typescript-eslint"],
    "rules": {
        "no-console": "warn"
    },
    "globals": {
        "uni": "readonly",
        "plus": "readonly",
        "wx": "readonly",
        "getCurrentPages": "readonly",
        "toRawType": "readonly",
        "AndroidJs": "readonly",
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    }
}
