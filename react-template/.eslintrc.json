{
    "root": true,
    "env": {
        "node": true,
        "es6": true,
        "browser": true,
        "jest": true
    },
    "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },

    "extends": [
        "plugin:@typescript-eslint/recommended",
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:prettier/recommended"
    ],
    "rules": {
        "no-console": "warn",
        "no-debugger": "warn"
    }
}
