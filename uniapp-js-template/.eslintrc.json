{
    "root": true,
    "env": {
        "node": true,
        "es6": true,
        "browser": true,
        "jest": true
    },
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },

    "extends": [
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:vue/essential",
        "eslint:recommended"
    ],
    "rules": {
        "no-console": "warn",
        "no-unsafe-any": 0,
        "vue/html-indent": ["error", 4]
    },
    "globals": {
        "uni": "readonly",
        "plus": "readonly",
        "wx": "readonly",
        "getCurrentPages": "readonly",
        "toRawType": "readonly",
        "AndroidJs": "readonly",
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    }
}
